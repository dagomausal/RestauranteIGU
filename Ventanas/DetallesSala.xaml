<Window x:Class="PracticaFinalV2.Ventanas.DetallesMesas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinalV2.Ventanas"
        mc:Ignorable="d"
        Title="Detalles de Mesas y Comandas" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Listado de Mesas" Grid.Row="0">
            <ListView x:Name="lvMesas" SelectionChanged="lvMesas_SelectionChanged" MouseDoubleClick="lvMesas_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mesa" DisplayMemberBinding="{Binding Id}" Width="50"/>
                        <GridViewColumn Header="Estado" DisplayMemberBinding="{Binding Estado}" Width="120"/>
                        <GridViewColumn Header="Capacidad" DisplayMemberBinding="{Binding CapacidadMaxima}" Width="80"/>
                        <GridViewColumn Header="Comensales" DisplayMemberBinding="{Binding ComensalesActuales}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <TextBlock Text="Comanda de la Mesa Seleccionada" Grid.Row="1" FontWeight="Bold" Margin="0,10,0,5" HorizontalAlignment="Center"/>

        <GroupBox Header="Platos Pedidos" Grid.Row="2">
            <ListView x:Name="lvComanda">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Plato" DisplayMemberBinding="{Binding PlatoPedido.Nombre}" Width="150"/>
                        <GridViewColumn Header="Categoría" DisplayMemberBinding="{Binding PlatoPedido.Categoria}" Width="100"/>
                        <GridViewColumn Header="Descripción" DisplayMemberBinding="{Binding PlatoPedido.Descripcion}" Width="200"/>
                        <GridViewColumn Header="Unidades" DisplayMemberBinding="{Binding Cantidad}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>
