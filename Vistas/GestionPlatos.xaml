<Window x:Class="PracticaFinalV2.Vistas.GestionPlatos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinalV2.Vistas"
        mc:Ignorable="d"
        Title="Gestión del menú" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Platos Disponibles" Grid.Column="0" Margin="0,0,10,0">
            <DockPanel>
                <Button Content="Guardar y Salir" Click="btnGuardar_Click" DockPanel.Dock="Bottom" Height="30" Margin="0,5,0,0"/>

                <ListView x:Name="lvCarta">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="150"/>
                            <GridViewColumn Header="Categoría" DisplayMemberBinding="{Binding Categoria}" Width="100"/>
                            <GridViewColumn Header="Descripción" DisplayMemberBinding="{Binding Descripcion}" Width="Auto"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </GroupBox>

        <GroupBox Header="Nuevo Plato" Grid.Column="1">
            <StackPanel Margin="10">
                <TextBlock Text="Nombre del Plato:" FontWeight="Bold"/>
                <TextBox x:Name="txtNombre" Margin="0,5,0,15"/>

                <TextBlock Text="Categoria:" FontWeight="Bold"/>
                <ComboBox x:Name="cbCategoria" Margin="0,5,0,15"/>

                <TextBlock Text="Descripción:" FontWeight="Bold"/>
                <TextBox x:Name="txtDescripcion" Height="60" TextWrapping="Wrap" Margin="0,5,0,15"/>

                <Button Content="Añadir a la Carta" Click="btnCrear_Click" Height="40"/>

                <Separator Margin="0,25,0,25"/>

                <Button Content="Eliminar Plato Seleccionado" Click="btnEliminar_Click" Height="40"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
